<h1><%= @cocktail.name %></h1>

<ul>Ingredients
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
    </li>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to cocktails_path do %>
  <i class="far fa-arrow-alt-circle-left"></i>
<% end %>
