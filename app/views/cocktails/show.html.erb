<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <div class="show-info">
        <h1><%= @cocktail.name %></h1>

        <h3>Ingredients</h3>
        <ul class="list-unstyled">
          <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %>
              <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Remove dose?"} do %>
                <font size="-1"><i class="fas fa-trash-alt"></i></font>
              <% end %>
            </li>
          <% end %>
        </ul>

        <i id="add-form" class="fas fa-plus"></i>

        <div id="new-dose" style="display: none;">
          <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
        </div>

      </div>
    </div>
    <div class="col-xs-6">
      <% if @cocktail.photo.blank? %>
        <%= image_tag "https://source.unsplash.com/500x500/?alcohol", alt: "cocktail", class: "show-image" %>
      <% else %>
        <%= cl_image_tag @cocktail.photo, height: 500, width: 500, crop: :fill, class: "show-image" %>
      <% end %>
    </div>
    <%= link_to cocktails_path do %>
      <i class="far fa-arrow-alt-circle-left page-bottom"></i>
    <% end %>
  </div>
</div>
