<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <div class="show-info">
        <h1><%= @cocktail.name %></h1>

        <h3>Ingredients</h3>
        <ul class="list-unstyled">
          <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %>
              <%= dose.ingredient.name %>
            </li>
          <% end %>
        </ul>

        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <i class="far fa-plus-square"></i>
        <% end %>

      </div>
    </div>
    <div class="col-xs-6">
      <%= image_tag "https://source.unsplash.com/500x500/?alcohol", alt: "cocktail", class: "show-image" %>
    </div>
    <%= link_to cocktails_path do %>
      <i class="far fa-arrow-alt-circle-left page-bottom"></i>
    <% end %>
  </div>
</div>
